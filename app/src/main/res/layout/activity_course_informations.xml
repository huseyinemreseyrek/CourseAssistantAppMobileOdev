<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseInformations">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar55"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="235dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="Created at :"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="@string/course_name"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/courseID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="@string/course_id"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainInstructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="@string/main_instructor"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="@string/status_attending"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/groupNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="Your Group : "
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/numberOfStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:text="Number of Students : "
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="updateCourseInformations"
        android:text="Update Course Informations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/showInstructorsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="showInstructors"
        android:text="Show Instructors"
        app:layout_constraintEnd_toEndOf="@+id/updateButton"
        app:layout_constraintStart_toStartOf="@+id/updateButton"
        app:layout_constraintTop_toBottomOf="@+id/updateButton" />

    <Button
        android:id="@+id/showStudentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="showStudents"
        android:text="Show Students"
        app:layout_constraintEnd_toEndOf="@+id/showInstructorsButton"
        app:layout_constraintStart_toStartOf="@+id/showInstructorsButton"
        app:layout_constraintTop_toBottomOf="@+id/showInstructorsButton" />

    <Button
        android:id="@+id/assignStudentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="assignStudents"
        android:text="Assign Students"
        app:layout_constraintEnd_toEndOf="@+id/showStudentsButton"
        app:layout_constraintStart_toStartOf="@+id/showStudentsButton"
        app:layout_constraintTop_toBottomOf="@+id/showStudentsButton" />

    <Button
        android:id="@+id/deleteStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="deleteStudent"
        android:text="Delete Student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignStudentsButton" />

    <Button
        android:id="@+id/deleteCourseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E42222"
        android:backgroundTint="#DD3535"
        android:onClick="deleteCourse"
        android:text="Delete Course"
        android:textColor="#CCEA1F"
        app:layout_constraintEnd_toEndOf="@+id/deleteStudent"
        app:layout_constraintStart_toStartOf="@+id/deleteStudent"
        app:layout_constraintTop_toBottomOf="@+id/deleteStudent"
        app:strokeColor="#A62727" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="54dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginEnd="52dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>